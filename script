-- Rayfield UI Loader
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Create the main window with KeySystem enabled
local Window = Rayfield:CreateWindow({
	Name = "·¥¢…¥Íú∞·¥ò Ä·¥è Utility GUI",
	LoadingTitle = "·¥¢…¥Íú∞·¥ò Ä·¥è - Loader",
	LoadingSubtitle = "Access requires valid key",
	KeySystem = true,
	Discord = false,
	KeySettings = {
		Title = "Authentication Required",
		Subtitle = "·¥¢…¥Íú∞·¥ò Ä·¥è Key System",
		Note = "Get your key at: loaderkey.crabdance.com",
		FileName = "ZnfproLoaderKey",
		SaveKey = true,
		GrabKeyFromSite = false,
		Key = {"FREEKEYFORALL"} -- ‚úÖ Your working key
	}
})

-- Create the main tab
local MainTab = Window:CreateTab("Main", 4483362458)

-- Variables
local speedEnabled = false
local jumpEnabled = false
local defaultSpeed = 16
local defaultJump = 50
local customSpeed = 60
local customJump = 100

-- Button to toggle WalkSpeed
MainTab:CreateButton({
	Name = "Toggle WalkSpeed",
	Callback = function()
		local player = game.Players.LocalPlayer
		local character = player.Character or player.CharacterAdded:Wait()
		local humanoid = character:FindFirstChildOfClass("Humanoid")

		if humanoid then
			speedEnabled = not speedEnabled
			humanoid.WalkSpeed = speedEnabled and customSpeed or defaultSpeed

			Rayfield:Notify({
				Title = "WalkSpeed",
				Content = speedEnabled and "üèÉ Speed Enabled!" or "üö∂ Normal Speed.",
				Duration = 3
			})
		end
	end
})

-- Button to toggle JumpPower
MainTab:CreateButton({
	Name = "Toggle JumpPower",
	Callback = function()
		local player = game.Players.LocalPlayer
		local character = player.Character or player.CharacterAdded:Wait()
		local humanoid = character:FindFirstChildOfClass("Humanoid")

		if humanoid then
			jumpEnabled = not jumpEnabled
			humanoid.UseJumpPower = true
			humanoid.JumpPower = jumpEnabled and customJump or defaultJump

			Rayfield:Notify({
				Title = "JumpPower",
				Content = jumpEnabled and "ü¶ò Jump Boost Enabled!" or "üßç Normal Jump.",
				Duration = 3
			})
		end
	end
})

-- Slider to adjust WalkSpeed
MainTab:CreateSlider({
	Name = "Set WalkSpeed",
	Range = {0, 200},
	Increment = 1,
	Suffix = "Speed",
	CurrentValue = customSpeed,
	Flag = "SpeedSlider",
	Callback = function(Value)
		customSpeed = Value
		local player = game.Players.LocalPlayer
		local character = player.Character or player.CharacterAdded:Wait()
		local humanoid = character:FindFirstChildOfClass("Humanoid")
		if humanoid and speedEnabled then
			humanoid.WalkSpeed = customSpeed
		end
	end,
})

-- Slider to adjust JumpPower
MainTab:CreateSlider({
	Name = "Set JumpPower",
	Range = {0, 300},
	Increment = 1,
	Suffix = "Power",
	CurrentValue = customJump,
	Flag = "JumpSlider",
	Callback = function(Value)
		customJump = Value
		local player = game.Players.LocalPlayer
		local character = player.Character or player.CharacterAdded:Wait()
		local humanoid = character:FindFirstChildOfClass("Humanoid")
		if humanoid and jumpEnabled then
			humanoid.JumpPower = customJump
		end
	end,
})

